<p id="notice"><%= notice %></p>

<h1>Recruitments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Describe</th>
      <th>Job</th>
      <th>Require</th>
      <th>Contact</th>
      <th>Publish date</th>
      <th>Is online</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruitments.each do |recruitment| %>
      <tr>
        <td><%= recruitment.title %></td>
        <td><%= recruitment.describe %></td>
        <td><%= recruitment.job %></td>
        <td><%= recruitment.require %></td>
        <td><%= recruitment.contact %></td>
        <td><%= recruitment.publish_date %></td>
        <td><%= recruitment.is_online %></td>
        <td><%= link_to 'Show', recruitment %></td>
        <td><%= link_to 'Edit', edit_recruitment_path(recruitment) %></td>
        <td><%= link_to 'Destroy', recruitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

